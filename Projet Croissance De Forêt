import random

def ensoleil(numero, foret):
    if numero == 0:
        return True
    return foret[numero - 1] <= foret[numero]  


def simulationensoleil(nb_arbre, annÃ©e):
    foret = [0] * nb_arbre
    
    for annÃ©e in range(1, annÃ©e + 1):
        print(f"AnnÃ©e {annÃ©e}: {foret}")
        for i in range(nb_arbre):
            if ensoleil(i, foret):  # VÃ©rifie si l'arbre est au soleil
                chance = 0.9  # Plus de chances de grandir s'il est au soleil
            else:
                chance = 0.6  # Moins de chances de grandir Ã  l'ombre
            if random.random() <= chance:
                foret[i] += 1

simulationensoleil(10, 5)  # 10 arbres, 5 ans





