import random

def creer_foret(nb_arbres):
    """
    Crée une forêt linéaire de nb_arbres, initialement
    avec des arbres de taille 0.
    
    Paramètres

    nb_arbres : int
        Nombre d'arbres dans la forêt.
    
    Retour

    list[int]
        Liste des tailles d'arbres.
    """
    return [0] * nb_arbres


def afficher_foret(annee, foret, titre=None):
    """
    Affiche l'état de la forêt pour une année.
    
    Paramètres

    annee : int
        Numéro de l'année (0, 1, 2, ...).
    foret : list[int]
        Liste des tailles d'arbres.
    titre : str ou None
        Optionnel, texte à afficher une seule fois avant l'année 0.
    """
    if titre is not None:
        print(titre)
    print(f"Année {annee} :", foret)

def simulateur_simple(nb_arbres, nb_annees, p_croissance=0.7):
    """
    Simulateur simple de croissance d'une forêt.
    
    À chaque année, chaque arbre a une probabilité p_croissance
    de grandir de 1, sinon il reste de même taille.
    
    Paramètres

    nb_arbres : int
        Nombre d'arbres dans la forêt.
    nb_annees : int
        Nombre d'années à simuler.
    p_croissance : float
        Probabilité pour un arbre de grandir d'une unité par an.
    
    Retour

    list[int]
        Forêt finale après nb_annees années.
    """
    foret = creer_foret(nb_arbres)
    afficher_foret(0, foret, titre="=== Simulateur simple ===")
    
    for annee in range(1, nb_annees + 1):
        for i in range(nb_arbres):
            if random.random() < p_croissance:
                foret[i] += 1
        afficher_foret(annee, foret)
    
    return foret

def est_au_soleil(foret, index):
    """
    Indique si l'arbre d'indice index est au soleil.
    
    Convention :
    - Le soleil vient de la gauche (sud).
    - Un arbre est à l'ombre si un arbre STRICTEMENT plus grand
      que lui se trouve à sa gauche (indice plus petit).
    - Sinon, il est au soleil.
    
    Paramètres

    foret : list[int]
        Liste des tailles d'arbres.
    index : int
        Position de l'arbre dans la forêt.
    
    Retour
    ------
    bool
        True si l'arbre est au soleil False s'il est à l'ombree
    """
    hauteur = foret[index]
    # On regarde tous les arbres à gauche
    for h in foret[:index]:
        if h > hauteur:
            return False
    return True


def simulateur_soleil(nb_arbres, nb_annees, p_soleil=0.8, p_ombre=0.4):
    """
    Simulateur de croissance avec prise en compte de l'ensoleillement
    
    À chaque année 
     Si un arbre est au soleil, il a une probabilité p_soleil de grandir.
     S'il est à l'ombre, il a une probabilité p_ombre de grandir.
    
    Paramètres
    ----------
    nb_arbres : int
        Nombre d'arbres dans la forêt.
    nb_annees : int
        Nombre d'années à simuler.
    p_soleil : float
        Probabilité de croissance pour un arbre au soleil.
    p_ombre : float
        Probabilité de croissance pour un arbre à l'ombre.
    
    Retour
    ------
    list[int]
        Forêt finale après nb_annees années.
    """
    foret = creer_foret(nb_arbres)
    afficher_foret(0, foret, titre="=== Simulateur avec soleil/ombre ===")
    
    for annee in range(1, nb_annees + 1):
        for i in range(nb_arbres):
            if est_au_soleil(foret, i):
                if random.random() < p_soleil:
                    foret[i] += 1
            else:
                if random.random() < p_ombre:
                    foret[i] += 1
        afficher_foret(annee, foret)
    
    return foret


# ==========================
# Programme principal (menu)
# ==========================

def menu():
    """
    Petit menu texte pour choisir quel simulateur lancer.
    """
    print("=== Simulation de croissance de forêt ===")
    print("1. Simulateur simple (probabilité fixe)")
    print("2. Simulateur avec soleil / ombre")
    
    choix = input("Votre choix (1 ou 2) : ").strip()
    
    # Demande des paramètres communs
    nb_arbres = int(input("Nombre d'arbres dans la forêt : "))
    nb_annees = int(input("Nombre d'années à simuler : "))
    
    if choix == "1":
        simulateur_simple(nb_arbres, nb_annees)
    elif choix == "2":
        # On peut garder des valeurs par défaut raisonnables
        print("Probabilités par défaut : soleil = 0.8, ombre = 0.4")
        entree = input("Changer ces valeurs ? (o/n) : ").strip().lower()
        if entree == "o":
            p_soleil = float(input("Probabilité de croissance au soleil : "))
            p_ombre = float(input("Probabilité de croissance à l'ombre : "))
            simulateur_soleil(nb_arbres, nb_annees, p_soleil, p_ombre)
        else:
            simulateur_soleil(nb_arbres, nb_annees)
    else:
        print("Choix non valide, fin du programme.")


if __name__ == "__main__":
    menu()

