import random

def creer_foret(nb_arbres):
    """
    CrÃ©e une forÃªt linÃ©aire de nb_arbres, initialement
    avec des arbres de taille 0.
    
    ParamÃ¨tres

    nb_arbres : int
        Nombre d'arbres dans la forÃªt.
    
    Retour

    list[int]
        Liste des tailles d'arbres.
    """
    return [0] * nb_arbres


def afficher_foret(annee, foret, titre=None):
    """
    Affiche l'Ã©tat de la forÃªt pour une annÃ©e.
    
    ParamÃ¨tres

    annee : int
        NumÃ©ro de l'annÃ©e (0, 1, 2, ...).
    foret : list[int]
        Liste des tailles d'arbres.
    titre : str ou None
        Optionnel, texte Ã  afficher une seule fois avant l'annÃ©e 0.
    """
    if titre is not None:
        print(titre)
    print(f"AnnÃ©e {annee} :", foret)

def simulateur_simple(nb_arbres, nb_annees, p_croissance=0.7):
    """
    Simulateur simple de croissance d'une forÃªt.
    
    Ã€ chaque annÃ©e, chaque arbre a une probabilitÃ© p_croissance
    de grandir de 1, sinon il reste de mÃªme taille.
    
    ParamÃ¨tres

    nb_arbres : int
        Nombre d'arbres dans la forÃªt.
    nb_annees : int
        Nombre d'annÃ©es Ã  simuler.
    p_croissance : float
        ProbabilitÃ© pour un arbre de grandir d'une unitÃ© par an.
    
    Retour

    list[int]
        ForÃªt finale aprÃ¨s nb_annees annÃ©es.
    """
    foret = creer_foret(nb_arbres)
    afficher_foret(0, foret, titre="=== Simulateur simple ===")
    
    for annee in range(1, nb_annees + 1):
        for i in range(nb_arbres):
            if random.random() < p_croissance:
                foret[i] += 1
        afficher_foret(annee, foret)
    
    return foret

def est_au_soleil(foret, index):
    """
    Indique si l'arbre d'indice index est au soleil.
    
    Convention :
    - Le soleil vient de la gauche (sud).
    - Un arbre est Ã  l'ombre si un arbre STRICTEMENT plus grand
      que lui se trouve Ã  sa gauche (indice plus petit).
    - Sinon, il est au soleil.
    
    ParamÃ¨tres

    foret : list[int]
        Liste des tailles d'arbres.
    index : int
        Position de l'arbre dans la forÃªt.
    
    Retour
    ------
    bool
        True si l'arbre est au soleil False s'il est Ã  l'ombree
    """
    hauteur = foret[index]
    # On regarde tous les arbres Ã  gauche
    for h in foret[:index]:
        if h > hauteur:
            return False
    return True


def simulateur_soleil(nb_arbres, nb_annees, p_soleil=0.8, p_ombre=0.4):
    """
    Simulateur de croissance avec prise en compte de l'ensoleillement
    
    Ã€ chaque annÃ©e 
     Si un arbre est au soleil, il a une probabilitÃ© p_soleil de grandir.
     S'il est Ã  l'ombre, il a une probabilitÃ© p_ombre de grandir.
    
    ParamÃ¨tres
    ----------
    nb_arbres : int
        Nombre d'arbres dans la forÃªt.
    nb_annees : int
        Nombre d'annÃ©es Ã  simuler.
    p_soleil : float
        ProbabilitÃ© de croissance pour un arbre au soleil.
    p_ombre : float
        ProbabilitÃ© de croissance pour un arbre Ã  l'ombre.
    
    Retour
    ------
    list[int]
        ForÃªt finale aprÃ¨s nb_annees annÃ©es.
    """
    foret = creer_foret(nb_arbres)
    afficher_foret(0, foret, titre="=== Simulateur avec soleil/ombre ===")
    
    for annee in range(1, nb_annees + 1):
        for i in range(nb_arbres):
            if est_au_soleil(foret, i):
                if random.random() < p_soleil:
                    foret[i] += 1
            else:
                if random.random() < p_ombre:
                    foret[i] += 1
        afficher_foret(annee, foret)
    
    return foret


# ==========================
# Programme principal (menu)
# ==========================

def menu():
    """
    Petit menu texte pour choisir quel simulateur lancer.
    """
    print("=== Simulation de croissance de forÃªt ===")
    print("1. Simulateur simple (probabilitÃ© fixe)")
    print("2. Simulateur avec soleil / ombre")
    
    choix = input("Votre choix (1 ou 2) : ").strip()
    
    # Demande des paramÃ¨tres communs
    nb_arbres = int(input("Nombre d'arbres dans la forÃªt : "))
    nb_annees = int(input("Nombre d'annÃ©es Ã  simuler : "))
    
    if choix == "1":
        simulateur_simple(nb_arbres, nb_annees)
    elif choix == "2":
        # On peut garder des valeurs par dÃ©faut raisonnables
        print("ProbabilitÃ©s par dÃ©faut : soleil = 0.8, ombre = 0.4")
        entree = input("Changer ces valeurs ? (o/n) : ").strip().lower()
        if entree == "o":
            p_soleil = float(input("ProbabilitÃ© de croissance au soleil : "))
            p_ombre = float(input("ProbabilitÃ© de croissance Ã  l'ombre : "))
            simulateur_soleil(nb_arbres, nb_annees, p_soleil, p_ombre)
        else:
            simulateur_soleil(nb_arbres, nb_annees)
    else:
        print("Choix non valide, fin du programme.")


if __name__ == "__main__":
    menu()

